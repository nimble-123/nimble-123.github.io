<core:View controllerName="dpa.view.Master" xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Page title="{i18n&gt;Title_MasterPage}">
		<subHeader>
			<Bar id="searchBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{device>/isNoTouch}"
						search="handleSearch" width="100%">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
    <List id="list" mode="{device>/listMode}" select="handleListSelect"
      items="{/Projects}">
      
      <items><ObjectListItem type="{device&gt;/listItemType}" press="handleListItemPress" title="{id}" number="{progress}" numberUnit="{i18n&gt;MasterPage_ObjectHeader_QuantityUnit}">
        <attributes>
          <ObjectAttribute text="{name}" />
        </attributes>
        <firstStatus>
          <ObjectStatus text="{state}" state="{path: 'state',formatter: 'dpa.util.Formatter.statusState'}" />
        </firstStatus>
      </ObjectListItem></items></List>
    <footer>
      <Bar>
        <contentRight>
          <Button icon="sap-icon://group-2" press="handleViewSettings" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</core:View>