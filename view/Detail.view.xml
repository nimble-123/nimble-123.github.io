<core:View controllerName="dpa.view.Detail" xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Page title="{i18n>Title_DetailPage}" class="sapUiFioriObjectPage"
    showNavButton="{device>/isPhone}" navButtonPress="handleNavButtonPress">
    <ObjectHeader title="{id} / {name}" number="{progress}"
      numberUnit="{i18n>DetailPage_ObjectHeader_QuantityUnit}"
      icon="img/logo.png">
      <firstStatus>
        <ObjectStatus text="{state}"
          state="{path: 'state', formatter: 'dpa.util.Formatter.statusState'}" />
      </firstStatus>
      <attributes>
      	<ObjectAttribute text="{category}"></ObjectAttribute></attributes></ObjectHeader>
    <IconTabBar expanded="{device>/isNoPhone}">
      <items>
        <IconTabFilter text="{i18n>IconTab_Overview}" icon="sap-icon://inspection">
          <content>
            <core:Fragment type="XML"
              fragmentName="dpa.view.OverviewForm"></core:Fragment>
          </content>
        </IconTabFilter>
        <IconTabFilter text="{i18n>IconTab_ProjectDescription}" icon="sap-icon://inspection">
          <content>
            <core:Fragment type="XML"
              fragmentName="dpa.view.ProjectDescriptionForm"></core:Fragment>
          </content>
        </IconTabFilter>
        <IconTabFilter text="{i18n>IconTab_Contract}" icon="sap-icon://contacts">
          <content>
            <core:Fragment type="XML"
              fragmentName="dpa.view.ContractForm"></core:Fragment>
          </content>
        </IconTabFilter>
        <IconTabFilter text="{i18n&gt;IconTab_PQP}" icon="sap-icon://contacts">
          <content>
        	<core:Fragment type="XML"
        	  fragmentName="dpa.view.PQPForm"></core:Fragment>
          </content>
        </IconTabFilter>
        <IconTabFilter text="{i18n>IconTab_GateOne}" icon="sap-icon://gantt-bars">
          <content>
            <core:Fragment type="XML"
              fragmentName="dpa.view.GateOneForm"></core:Fragment>
          </content>
        </IconTabFilter>
        <IconTabFilter text="{i18n>IconTab_GateTwo}" icon="sap-icon://gantt-bars">
          <content>
            <core:Fragment type="XML"
              fragmentName="dpa.view.GateTwoForm"></core:Fragment>
          </content>
        </IconTabFilter>
        <IconTabFilter text="{i18n>IconTab_GateThree}" icon="sap-icon://gantt-bars">
          <content>
            <core:Fragment type="XML"
              fragmentName="dpa.view.GateThreeForm"></core:Fragment>
          </content>
        </IconTabFilter>
        <IconTabFilter text="{i18n>IconTab_GateFour}" icon="sap-icon://gantt-bars">
          <content>
            <core:Fragment type="XML"
              fragmentName="dpa.view.GateFourForm"></core:Fragment>
          </content>
        </IconTabFilter>
      </items>
    </IconTabBar>
    <footer>
      <Bar>
        <contentRight>
          <Button text="{i18n>ApproveButtonText}" icon="sap-icon://accept"
            press="handleApprove" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</core:View>