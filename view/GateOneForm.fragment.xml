<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:c="sap.ui.commons"
	xmlns="sap.m">
	<l:Grid
		defaultSpan="L12 M12 S12"
		width="auto">
		<l:content>
			<f:SimpleForm
				minWidth="1024"
				maxContainerCols="6"
				editable="false"
				layout="ResponsiveGridLayout"
				title="{i18n>GateOne_Title}"
				labelSpanL="3"
				labelSpanM="3"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="1"
				columnsM="1">
				<f:content>
					<c:RoadMap id="rMap" numberOfVisibleSteps="4">
						<c:steps>
							<c:RoadMapStep id="step1" label="Step 1" />
							<c:RoadMapStep id="step2" label="Step 2" />
							<c:RoadMapStep id="step3" label="Step 3">
								<c:RoadMapStep id="subStep1" label="Sub Step 1" />
								<c:RoadMapStep id="subStep2" label="Sub Step 2" />
							</c:RoadMapStep>
							<c:RoadMapStep id="step4" label="Step 4" />
						</c:steps>																		
					</c:RoadMap>
				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>