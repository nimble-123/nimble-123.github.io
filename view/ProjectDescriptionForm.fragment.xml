<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<l:Grid
		defaultSpan="L12 M12 S12"
		width="auto">
		<l:content>
			<f:SimpleForm
				minWidth="1024"
				maxContainerCols="2"
				editable="false"
				layout="ResponsiveGridLayout"
				title="{i18n>ProjectDescription_Title}"
				labelSpanL="3"
				labelSpanM="3"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="1"
				columnsM="1">
				<f:content>
					<Label text="{i18n>ProjectDescription_Name}" />
					<Text text="{name}" />
					<Label text="{i18n>ProjectDescription_Street}" />
					<Text text="{address/Street}" />
					<Label text="{i18n>ProjectDescription_City}" />
					<Text text="{address/City}" />
					<Label text="{i18n>ProjectDescription_ZipCode}" />
					<Text text="{address/ZipCode}" />
					<Label text="{i18n>ProjectDescription_Country}" />
					<Text text="{address/Country}" />
				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>